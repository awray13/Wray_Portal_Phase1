@model IEnumerable<Wray_Portal_Phase1.Models.Transaction>

<div class="content-header">
    <div class="container-fluid">
        <h2>Transaction Index</h2>
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-warning" })
        </p>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card card-info">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Category Item")
                            </th>
                            <th>
                                @Html.DisplayName("FirstName")
                            </th>
                            <th>
                                @Html.DisplayName("Transaction Type")
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Memo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryItem.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Owner.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TransactionType.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Memo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
