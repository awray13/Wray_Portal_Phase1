@using Wray_Portal_Phase1.Models
@using Wray_Portal_Phase1.Helper
@model IEnumerable<BankAccount>

@{ 
    var roleHelper = new UserRoleHelper();
}

<div class="content-header">
    <div class="container-fluid">
        <h2>Bank Account Index</h2>
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-warning" })
        </p>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="card card-warning">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.BankAccountType.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Household.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OwnerId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartingBalance)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CurrentBalance)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LowBalanceLevel)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BankAccountType.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Household.Name)
                                </td>
                                <td>
                                    @roleHelper.ListUserRoles(item.OwnerId).FirstOrDefault()
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartingBalance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CurrentBalance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LowBalanceLevel)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>
