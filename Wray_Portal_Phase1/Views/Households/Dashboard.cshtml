                {
                    <h1 class="m-0 text-dark">@Model.Name Dashboard</h1>
                    <h5 class="text-muted">@Model.Greeting</h5>
                }
                else
                {
                    <h1 class="m-0 text-dark">Lobby</h1>

                }

            </div><!-- /.col -->

        </div><!-- /.row -->
        <hr />
        @if (User.IsInRole("Owner"))
        {
            <div class="row">
                <div class="col">
                    <button data-toggle="modal" data-target="#inviteMember" class="btn btn-warning text-white">Invite new Member</button>
                </div>
            </div>
        }
        else if (User.IsInRole("NewUser"))
        {
            <div class="row">
                <div class="col-6">
                    <div class="card card-outline card-primary">
                        <div class="card-header">
                            <div class="card-title">
                                <span>Welcome New User</span>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <button data-toggle="modal" data-target="#createHouse" class="btn btn-primary">Create Household</button>
                                </div>
                                <div class="col">
                                    @Html.ActionLink("Join House", "Join", "Households", null, new { @class = "btn btn-success" })
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        }
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
