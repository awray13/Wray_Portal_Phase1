    <script>
        //-------------
        //- BAR CHART -
        //-------------

        if ($('#barChart').length) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetCategoryChartData", "Charts")',
                dataType: "json"
            }).then(function (response) {
                new Morris.Bar({
                    element: 'barChart',
                    data: response.Data,
                    barColors: ['#00a65a', '#f56954'],
                    xkey: 'Name',
                    ykeys: ['Target', 'Actual'],
                    labels: response.Labels
                });
            });
        };
    </script>
